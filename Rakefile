require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('shellslinger', '0.5.0') do |p|
    p.description    = "Zip through the files applying commands as fast as you can type"
    p.url            = "http://github.com/lionicsheriff/shellslinger"
    p.author         = "Matthew Goodall"
    p.email          = "dogsaw+shellslinger@thecyberplains.com"
    p.ignore_pattern = ["pkg/*", "tmp/*", "script/*"]
    p.development_dependencies = ["colorize","trollop"]
end
